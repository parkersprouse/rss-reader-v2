<%= form_for :feeds, routes.feed_update_path(parsed_feed[:id]), method: :patch, 'data-scrollfreeze': true do
  div class: 'edit-feed-form' do
    div class: 'gra-form-group' do
      span class: 'prefixed-input prefixed-input--title' do
        text_field :title, placeholder: 'Feed Title', value: parsed_feed[:title]
      end
    end

    div class: 'gra-form-group' do
      span class: 'prefixed-input prefixed-input--url' do
        text_field :feed_url, placeholder: 'Feed URL', value: parsed_feed[:source]
      end
    end

    div class: 'gra-form-actions' do
      submit class: 'gra-btn' do
        span 'Save'
        span class: 'icon-outer' do icons[:check] end
      end
      a class: 'gra-btn gra-btn-outline', 'data-controller': 'edit', 'data-action': 'click->edit#showPanel', 'data-id': parsed_feed[:id] do
        span class: 'icon-outer' do icons[:arrow_left] end
        span 'Back'
      end
    end
  end
end %>
