<div class='main-container'>
  <%= render partial: 'create_form' %>

  <% if parsed_feeds.present? %>
    <div class='container'>
      <div class='row feeds-list'>
        <% parsed_feeds.each do |feed| %>
          <div class='col col-33'>
            <div class='gra-card'>
              <div class='gra-card-content'>
                <h5 class='gra-card-title'>
                  <%= feed[:title] %>
                  <i data-feather='edit'></i>
                  <%=
                    fancy_link(routes.feed_delete_path(id: feed[:id]), method: :delete, title: 'Delete Feed') do
                      i '', 'data-feather': 'x-circle'
                    end
                  %>
                </h5>
                <div class='gra-card-body'>
                  <% if feed[:error].present? %>
                    <%= feed[:error] %>
                  <% end %>
                  <% if feed[:entries].present? %>
                    <ul class='gra-list'>
                      <% feed[:entries].each do |entry| %>
                        <li class='gra-list-item'>
                          <a href='<%= entry.link %>' target='_blank'>
                            <%= entry.title %>
                          </a>
                        </li>
                      <% end %>
                    </ul>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

