<%=
  form_for :feeds, routes.feed_create_path do
    if flash[:error_alert].present?
      div class: 'gra-mg-bottom-m gra-alert red', style: 'display: flex; justify-content: center; align-items: center; flex-wrap: nowrap; gap: 1rem;', role: 'alert' do
        div style: 'flex-grow: 0; flex-shrink: 1;' do
          i '', 'data-feather': 'x-circle'
        end
        div style: 'flex-grow: 1; flex-shrink: 0;' do
          flash[:error_alert]
        end
      end
    end

    div class: 'add-feed-form' do
      div class: 'gra-form-group' do
        span class: 'prefixed-input prefixed-input--url' do
          text_field :feed_url, placeholder: 'Feed URL'
        end
      end

      div class: 'gra-form-group' do
        submit class: 'gra-btn gra-width-100' do
          span 'Add'
          i '', 'data-feather': 'plus', class: 'icon-right'
        end
      end
    end
  end
%>
